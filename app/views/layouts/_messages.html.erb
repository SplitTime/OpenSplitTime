<%# Rails flash messages styled for Bootstrap 3.0 %>

<%# New Growl Style Flash Messages %>
<% if flash.present? %>
<script type="text/javascript">
  $(function() {
    <% flash.each do |name, msg| %>
      <% if msg.is_a?(String) %>
        $.notify({
          message: '<%= j msg %>'
        }, {
          type: '<%= j name %>',
          delay: 0 // Prevent automatic dismissal
        });
      <% end %>
    <% end %>
  });
</script>
<% end %>