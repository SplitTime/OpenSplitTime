<% content_for :title do %>
  <% "OpenSplitTime: Live entry - #{@event_group.name}" %>
<% end %>

<% content_for(:container_type) do %>skip<% end %>

<header class="ost-header">
  <div class="container">
    <div class="row">
      <div class="ost-title col-sm-5">
        <h1><strong><%= [@presenter.name, nil].compact.join(': ') %></strong></h1>
        <ul class="breadcrumb breadcrumb-ost">
          <li><%= link_to 'Organizations', organizations_path %></li>
          <li><%= link_to @presenter.organization.name, organization_path(@presenter.organization) %></li>
          <li><a><%= @presenter.event_group.name %></a></li>
          <li class="active">Live Entry</li>
        </ul>
      </div>
      <aside class="ost-alerts col-sm-7">
        <div id="js-new-times-alert" class="alert alert-orange float-right" role="alert">
          <a href="#js-pull-times" class="alert-body">
            <i class="glyphicon glyphicon-time alert-icon"></i>
            <strong>New Live Times Available</strong><br/>
            Click to pull times.
          </a>
        </div>
      </aside>
    </div>
    <%= content_tag(:div, id: "js-event-group-id", data: {event_group_id: @event_group.id, server_uri: ENV['BASE_URI']}) do %>
    <% end %>
    <%= render 'events/view_buttons', view_object: @presenter %>
  </div>
</header>

<article class="container">
<div class="form-split-wrapper lap-disabled group-disabled time-in-disabled time-out-disabled pacer-disabled">
  <div class="col-xs-12 col-sm-5 col-md-4 live-entry">
    <span id="js-live-times-pusher" data-key="<%= ENV['PUSHER_KEY'] %>"></span>
    <form id="js-add-effort-form">
      <input type="hidden" id="js-unique-id" value=""/>
      <input type="hidden" id="js-raw-time-id-in" value=""/>
      <input type="hidden" id="js-raw-time-id-out" value=""/>
      <div class="form-group form-group-sm clearfix">
        <label class="col-xs-4" for="js-station-select">Aid Station</label>
        <div class="col-xs-8">
          <select id="js-station-select" name="js-station-select" class="form-control" autofocus>Aid Station</select>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix">
        <label class="col-xs-4" for="js-bib-number">Bib</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-bib-number" type="tel" name="bibNumber" class="form-control" autocomplete="off" value="" style="text-align: left;">
            <span class="input-group-addon time-status">
              <span class="glyphicon glyphicon-ok-sign good text-success" title="Bib Found" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-question-sign questionable text-warning" title="Bib In Wrong Event" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-remove-sign bad text-danger" title="Bib Not Found" data-toggle="tooltip" data-placement="right"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix lap-only">
        <label class="col-xs-4" for="js-lap-number">Lap</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-lap-number" type="tel" name="lap" class="form-control" autocomplete="off" value="" style="text-align: left;">
          </div>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix time-in-only">
        <label id="js-time-in-label" class="col-xs-4" for="js-time-in">&nbsp;</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-time-in" type="tel" name="timeIn" class="form-control" value="" placeholder="hh:mm:ss (24hr)">
            <span class="input-group-addon time-status">
              <span class="glyphicon glyphicon-exclamation-sign exists" title="Data Already Exists" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ok-sign good text-success" title="Time Appears Good" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-question-sign questionable text-warning" title="Time Appears Questionable" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-remove-sign bad text-danger" title="Time Appears Bad" data-toggle="tooltip" data-placement="right"></span>
            </span>
            <span id="js-rapid-time-in" class="input-group-addon time-mode">
              <span class="glyphicon glyphicon-time null" title="Enable Rapid Mode" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-flash enabled" title="Disable Rapid Mode" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ban-circle disabled" title="Rapid Mode Halted" data-toggle="tooltip" data-placement="right"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix time-out-only">
        <label id="js-time-out-label" class="col-xs-4" for="js-time-out">&nbsp;</label>
        <div class="col-xs-8">
          <div class="input-group">
            <input id="js-time-out" type="tel" name="timeOut" class="form-control" value="" placeholder="hh:mm:ss (24hr)">
            <span class="input-group-addon time-status">
              <span class="glyphicon glyphicon-exclamation-sign exists" title="Data Already Exists" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ok-sign good text-success" title="Time Appears Good" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-question-sign questionable text-warning" title="Time Appears Questionable" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-remove-sign bad text-danger" title="Time Appears Bad" data-toggle="tooltip" data-placement="right"></span>
            </span>
            <span id="js-rapid-time-out" class="input-group-addon time-mode">
              <span class="glyphicon glyphicon-time null" title="Enable Rapid Mode" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-flash enabled" title="Disable Rapid Mode" data-toggle="tooltip" data-placement="right"></span>
              <span class="glyphicon glyphicon-ban-circle disabled" title="Rapid Mode Halted" data-toggle="tooltip" data-placement="right"></span>
            </span>
          </div>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix pacer-only">
        <label class="col-xs-4" for="pacer">Pacer</label>
        <div class="col-xs-8">
          <label class="checkbox-inline" for="js-pacer-in">
            <input id="js-pacer-in" type="checkbox" name="pacerIn" value="true"> In
          </label>
          <label class="checkbox-inline" for="js-pacer-out">
            <input id="js-pacer-out" type="checkbox" name="pacerOut" value="true"> Out
          </label>
        </div>
      </div>
      <div class="form-group form-group-sm clearfix">
        <label class="col-xs-4"></label>
        <div class="col-xs-8">
          <button id="js-dropped-button" type="button" class="btn btn-sm btn-default col-xs-12">
            <input id="js-dropped" type="checkbox" name="dropped" value="true">
            <span class="glyphicon glyphicon-unchecked"></span>
            &nbsp;Dropped Here
          </button>
        </div>
      </div>
      <div class="col-xs-8 col-xs-offset-2 col-sm-offset-4 form-buttons">
        <input id="js-effort-id" type="hidden" name="effort-id" value="">
        <input id="js-live-bib" type="hidden" name="live-bib" value="">
        <button id="js-add-to-cache" type="submit" class="btn btn-sm btn-primary">Add</button>
        <button id="js-discard-entry-form" type="submit" class="btn btn-sm btn-danger">Discard</button>
      </div>
    </form>
  </div>

  <div class="col-xs-12 col-sm-7 col-md-8 splits-slider">
    <div class="splits-slider-data group-splits-slider-data">
      <h4>
        <a id="js-effort-name" data-toggle="modal" data-target="#js-html-modal" data-effort-id="" data-event-id=""></a>
        <span class="group-only">&nbsp;(<span id="js-effort-event-name"></span>)</span>
      </h4>
      <div class="table-wrapper">
        <table class="table table-striped table-condensed">
          <thead>
            <tr>
              <th>Split</th>
              <th>Mile</th>
              <th>Time of Day</th>
              <th>Elapsed Time</th>
              <th class="pacer-only">Pacer In/Out</th>
            </tr>
          </thead>
          <tbody id="js-effort-table"></tbody>
        </table>
      </div>
    </div>
  </div>
</div>
</article>

<header class="ost-header">
  <div class="container">
    <div class="row">
      <div class="col-sm-6">
        <h3><strong>Local Data Workspace</strong></h3>
      </div>
      <div class="col-sm-6 form-inline text-right">
        Show
        <select class="form-control">
          <option>10</option>
        </select>
        Entries
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
<div class="row provisional-data lap-disabled group-disabled time-in-disabled time-out-disabled pacer-disabled">
  <div class="col-xs-12">
    <div class="provisional-table-wrapper">
      <table id="js-local-workspace-table" class="table table-striped provisional-data-table">
        <thead>
        <tr>
          <th>Aid Station</th>
          <th class="group-only">Event</th>
          <th>Bib</th>
          <th>Name</th>
          <th class="lap-only">Lap</th>
          <th class="time-in-only">Time In</th>
          <th class="time-out-only">Time Out</th>
          <th class="pacer-only">Pacer</th>
          <th>Dropped</th>
          <th data-orderable="false">&nbsp;</th>
        </tr>
        </thead>
        <tbody>
        <tr style="display: none">
          <td data-order="0"></td>
          <td class="group-only"></td>
          <td></td>
          <td></td>
          <td class="lap-only"></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
          <td></td>
        </tr>
        </tbody>
      </table>
    </div>
  </div>
</div>
<div class="row">
  <div class="col-xs-12" id="js-live-messages">
    <div class="alert alert-warning" role="alert" id="js-import-live-warning">
      <strong>You're up to date.</strong> No raw time data available to pull.
    </div>
    <div class="alert alert-danger" role="alert" id="js-import-live-error">
      <strong>Error</strong> Couldn't read data from the server.
    </div>
  </div>
</div>
<div class="row provisional-data">
  <div id="js-table-submit-buttons" class="col-xs-12 table-submit-wrapper">
    <button id="js-pull-times" class="btn btn-primary">
      Pull Times
      <span class="badge" id="js-pull-times-count"></span>
    </button>
    <button id="js-force-pull-times" class="btn btn-danger" style="display: none;">
      Force Pull
      <span class="badge" id="js-force-pull-times-count"></span>
    </button>
    <div class="btn-group" role="group">
      <button id="js-file-split" class="btn btn-primary" disabled></button>
      <button class="btn btn-primary fileinput-button">
        <span>Import File</span>
        <input id="js-file-upload" type="file" name="file"/>
      </button>
    </div>
    <div class="btn-group" role="group">
      <button id="js-delete-all-time-rows" class="btn btn-danger">Discard All</button>
      <button id="js-delete-all-warning" class="btn btn-danger" disabled>Cannot Be Undone</button>
    </div>
    <button id="js-submit-all-time-rows" class="btn btn-success">Submit All</button>
  </div>

  <div id="debug">
  </div>

  <div id="js-html-modal" class="modal fade" tabindex="-1" role="dialog">
    <div class="modal-dialog modal-lg" role="document">
      <div class="modal-content">
        <div class="modal-body">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span></button>
          <div class="js-modal-content"></div>
        </div>
      </div>
    </div>
  </div>
</div>
</article>