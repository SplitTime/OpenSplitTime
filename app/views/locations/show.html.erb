<h1 align="center"><%= @location.name %></h1>
<h4 align="center">
  <%= "Elevation: #{@location.elevation.nil? ? '[Unknown]' : @location.elevation}, Lat/Lon: " %>
  <% if @location.latitude.nil? %>
      [Unknown]
  <% else %>
      <%= @location.latitude.abs %>
      <%= @location.latitude >= 0 ? "째N" : "째S" %>
  <% end %>
  <% if @location.longitude.nil? %>
      [Unknown]
  <% else %>
      <%= @location.longitude.abs %>
      <%= @location.longitude >= 0 ? "째E" : "째W" %>
  <% end %>
</h4>
<div class="row">
  <div class="col-md-6 col-md-offset-3 center">
    <%= @location.description %>
  </div>
</div>
<hr>
<div class="well col-xs-10 col-xs-offset-1">
  <div id="map" style="width: 745px; height: 550px;"></div>

  <script>
    $(document).ready(function () {
      var location = <%= @location.to_json.html_safe %>    // pass ruby variable to javascript
          gmap_show(location);    // init show map for company card (only print marker)
    });
  </script>

  <hr>
  <div class="article-actions">

    <%= link_to '<< View all locations', locations_path, class: "btn btn-sm btn-default" %>
    <%= link_to '< Back', :back, class: "btn btn-sm btn-default" %>
    <% if @current_user.authorized_to_edit?(@location) %>
        <%= link_to 'Edit this location', edit_location_path(@location), class: "btn btn-sm btn-primary" %>
        <%= link_to 'Delete this location', location_path(@location), method: :delete,
                    data: {confirm: "Are you sure?"}, class: "btn btn-sm btn-danger" %>
    <% end %>
  </div>
</div>
