<% content_for :title do %>
  <% "OpenSplitTime: My stuff - #{@presenter.full_name}" %>
<% end %>

<% content_for(:container_type) do %>skip
<% end %>

<header class="ost-header">
  <div class="container">
    <div class="ost-heading row">
      <div class="col">
        <div class="ost-title">
          <h1><strong><%= @presenter.full_name %></strong></h1>
          <ul class="breadcrumb">
            <li class="breadcrumb-item"><%= current_user&.admin? ? (link_to 'Users', users_path) : 'Users' %></li>
            <li class="breadcrumb-item"><%= link_to @presenter.full_name, user_path(@presenter.current_user) %></li>
            <li class="breadcrumb-item active">My Stuff</li>
          </ul>
        </div>
      </div>
    </div>
  </div>
</header>

<article class="ost-article container">
  <div class="row"
       data-controller="masonry"
       data-masonry='{"percentPosition": true }'
       style="position: relative">
    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Results</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_results_card" src="<%= my_stuff_results_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Events</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_events_card" src="<%= my_stuff_events_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Event Series</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_event_series_card" src="<%= my_stuff_event_series_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Interests</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_interests_card" src="<%= my_stuff_interests_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Live Updates</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_live_updates_card" src="<%= my_stuff_live_updates_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>

    <div class="col-md-6 col-lg-4">
      <div class="card mb-3">
        <h3 class="card-header"><strong>My Organizations</strong></h3>
        <div class="card-body">
          <turbo-frame id="my_stuff_organizations_card" src="<%= my_stuff_organizations_path %>">
            <%= render partial: "shared/loading" %>
          </turbo-frame>
        </div>
      </div>
    </div>
  </div>
</article>
